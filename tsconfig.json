{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "typeRoots": [
            "src/typings",
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__test__/*",
        "src/test"
    ]
}